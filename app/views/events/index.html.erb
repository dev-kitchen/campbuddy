<nav class="day">
  <% ((Date.today.at_beginning_of_week - 1)..Date.today.end_of_week).each do |date| %>
    <a href="<%= events_path(date: date) %>" class="<%= 'active' if date == @selected_date %>">
      <%= date.strftime('%a') %>
    </a>
  <% end %>
</nav>

<nav class="events">
  <a href="#" data-filter="red">Workshops</a>
  <a href="#" data-filter="green">Activities</a>
  <a href="#" data-filter="blue">Piste</a>
  <a href="#" data-filter="gray">Camp</a>
  <a href="#" data-filter="royal">Radio</a>
  <a href="#" data-filter="yellow">Skibus</a>
</nav>

<%= render @events %>
