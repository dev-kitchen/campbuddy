<%= simple_form_for @event do |f| %>
  <div class="custom-select long">
    <%= f.input :owner_id, collection: User.all, value_method: :id, label_method: :fullname, prompt: true, input_html: { class: 'custom-dropdown long' }  %>
  </div>
  <div class="custom-select">
    <%= f.input :category_id, collection: Category.all, value_method: :id, label_method: :name, prompt: true, input_html: { class: 'custom-dropdown' } %>
  </div>

  <label for="mandatory">Mandatory</label>
  <%= check_box_tag 'mandatory' %>

  <%= f.input :starts_date, input_html: { class: :datepicker, value: l(f.object.starts_date.to_date) } %>
  <%= f.input :starts_time, input_html: { class: :timepicker, value: l(f.object.starts_time.to_time, format: :time_only) } %>
  <%= f.input :ends_date,   input_html: { class: :datepicker, value: l(f.object.ends_date.to_date) } %>
  <%= f.input :ends_time,   input_html: { class: :timepicker, value: l(f.object.ends_time.to_time, format: :time_only) } %>

  <%= f.input :impression, as: :image_preview, input_html: {preview_version: :thumb} %>

  <%= f.input :title %>
  <%= f.input :description %>

  <%= f.button :submit %>
<% end %>
