<% cache offline_cache_key do %>
<!DOCTYPE html>
<html>
<head>
  <title>Camp Buddy Offline</title>
  <%= render 'meta' %>
</head>
<body class="<%= body_class %>">
  <div id="main-wrapper">
    <section class="content">
      <div class="detail-nav full-row">
        <div class="title">
          <h1><%= t '.title' %></h1>
          <h2><%= t '.subtitle' %></h2>
        </div>
      </div>

      <div class="padded-row">
        <h2><%= t('.emergency_numbers') %></h2>
      </div>
      <div class="padded-row">
        <div class="emergency-numbers">
          <ul>
            <% @emergency_numbers.each do |number| %>
              <li>
                <a href="tel:<%= number.number %>">
                  <%= icon_emergency(css_class: number.color) %>
                  <span class="text"><%= number.name %></span>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="padded-row">
        <h2><%= t('.my_events') %></h2>
      </div>
      <% if @events.any? %>
        <div class="full-row">
          <div class="events">
            <%= render @events %>
          </div>
        </div>
      <% end %>
    </section>

    <% if @maps.any? %>
      <section class="content">
        <div class="padded-row">
          <h2><%= t('.maps') %></h2>
          <ul>
            <% @maps.each do |map| %>
              <li>
                <h3><%= map.name %></h3>
                <p><%= map.description %></p>
                <%= link_to map.map.url, class: 'magnifik' do %>
                  <%= image_tag map.map.url %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </section>
    <% end %>
  </div>
</body>
</html>
<% end %>
