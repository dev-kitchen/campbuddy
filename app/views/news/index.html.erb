<% if @emergency_numbers.any? || @maps.any? %>
  <div class="full-row">
    <% if @emergency_numbers.any? %>
      <%= link_to emergency_numbers_path, class: :emergency do %>
        <span class="text"><%= t '.emergency' %></span>
        <%= icon_emergency %>
      <% end %>
    <% end %>
    <% if @maps.any? %>
      <%= link_to maps_path, class: :maps do %>
        <span class="text"><%= t '.maps' %></span>
        <%= icon_map %>
      <% end %>
    <% end %>
  </div>
<% end %>

<div class="padded-row">
  <h1><%= News.model_name.human count: 2 %></h1>
  <% if @news.any? %>
    <%= render @news %>
  <% else %>
    <%= render [News.new(message: t('.no_news'))] %>
  <% end %>
</div>

<div class="padded-row">
  <% if @pics_of_the_day.any? %>
    <h1><%= PicOfTheDay.model_name.human count: 2 %></h1>
    <% @pics_of_the_day.each do |pic| %>
      <%= image_tag pic.image.front, class: 'pic-of-the-day' %>
    <% end %>
  <% end %>
</div>
