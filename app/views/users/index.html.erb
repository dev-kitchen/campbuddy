<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">actions</th>
    </tr>
  </thead>

  <tbody class="table">
    <% @users.each do |user| %>
      
      <tr>
        
        <td><a href="users/<%= user.id %>"><%= user.firstname %> <%= user.name %> <i class="fa fa-external-link"></i></a></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><a href="<%= edit_user_path(user) %>">edit <i class="fa fa-pencil-square-o"></i></a></td>
        <td><%= link_to 'Destroy', user, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, {:class => "button"} %>
