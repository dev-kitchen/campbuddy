<!DOCTYPE html>
<html>
<head>
  <title>trololo</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <script>
    //global vars -> more detail in application.js
    var hideNavBar = false;
  </script>

  <div id="main-wrapper">
    <nav>
    <% if signed_in? %>
      <ul>
        <li><%= link_to icon(:home), memberships_path %></li>
        <li><%= link_to icon(:calendar), memberships_path %></li>
        <li><%= link_to icon(:list), workshops_path %></li>
        <li><%= link_to icon(:users), groups_path %></li>
        <li><%= link_to icon(:user), users_path %></li>
        <!-- <ul><li><%= link_to 'member', memberships_path %></li></ul> -->
        <!-- <ul><li><%= link_to 'teilnehmer', attendances_path %></li></ul> -->
        <!-- <li><%= link_to 'Users', users_path %></li> -->
      </ul>
    <% end %>
    </nav>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <section class="content">
      <%= yield %>
    </section>


    <% if signed_in? %>
      <!--
      <div>
          Signed in as: <%= current_user.email %>
          <%= button_to 'Sign out', sign_out_path, method: :delete %>
      </div>
      -->
    <% end %>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
</body>
</html>
