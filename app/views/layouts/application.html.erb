<!DOCTYPE html>
<html>
<head>
  <title>CampPlaner</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-title" content="CampPlaner">
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="shortcut icon" type="image/png" href="<%=image_path("logo.png")%>">

  <!-- iPhone 3 and 4 Non-Retina 320x460-->
  <link rel="apple-touch-startup-image" media="(device-width: 320px)" href="<%=image_path("welcome-screen.png")%>">
  <!-- iPhone 4 Retina 640x920-->
  <link rel="apple-touch-startup-image" media="(device-width: 320px) and (-webkit-device-pixel-ratio: 2)" href="<%=image_path("welcome-screen.png")%>">
  <!-- iPhone 5 Retina 640x1096-->
  <link rel="apple-touch-startup-image" media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2)" href="<%=image_path("welcome-screen.png")%>">
  <!-- iOS Web App Icon -->
  <link rel="apple-touch-icon" href="<%=image_path("logo.png")%>">
</head>
<body class="<%= body_class %>">
  <div id="main-wrapper">
    <% if signed_in? %>
      <% if can_see_navigation? %>
        <nav class="main five">
          <%= link_to news_index_path do %>
            <%= icon_home %>
            <span class="text"><%= t('navigation.news') %></span>
          <% end %>
          <%= link_to events_path do %>
            <%= icon_calendar %>
            <span class="text"><%= t('navigation.overview') %></span>
          <% end %>
          <%= link_to catalog_events_path do %>
            <%= icon_discover %>
            <span class="text"><%= t('navigation.catalog') %></span>
          <% end %>
          <%= link_to groups_path do %>
            <%= icon_group %>
            <span class="text"><%= t('navigation.groups') %></span>
          <% end %>
          <%= link_to user_path(current_user) do %>
            <%= icon_one %>
            <span class="text"><%= t('navigation.me') %></span>
          <% end %>
          <%# <%= nav_link "92-expand", news_index_path, t('navigation.news') %1> %>
          <%# <%= nav_link "98-file-minus", events_path, t('navigation.overview') %1> %>
          <%# <%= nav_link "60-question-circle", catalog_events_path, t('navigation.catalog') %1> %>
          <%# <%= nav_link "99-statistic-pie", groups_path, t('navigation.groups') %1> %>
          <%# <%= nav_link "53-mobile", user_path(current_user), t('navigation.me') %1> %>
          <% if can? :access, :administration %>
            <%# <%= nav_link "74-control-fastforward", rails_admin_path, t('navigation.administration') %1> %>
            <%= link_to rails_admin_path do %>
              <%= icon_administration %>
              <span class="text"><%= t('navigation.administration') %></span>
            <% end %>
          <% end %>
        </nav>
      <% else %>
        <nav class="main single">
          <%= link_to sign_out_path, method: :delete do %>
            <%= icon_logout %>
            <span class="text"><%= t('navigation.sign_out') %></span>
          <% end %>
        </nav>
      <% end %>
    <% end %>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <section class="content">
      <%= yield %>
    </section>
  </div>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= render 'analytics' %>
</body>
</html>
